<!-- Carousel -->
<div id="carousel<%= widget.id %>" class="carousel slide" data-ride="carousel">
  <% if scrivito_in_editable_view? %>
    <div pageid="<%= @obj.id %>" widgetid="<%= widget.id %>" class="scrivito_elastic_slider_widget_add-new-panel">
      <%= content_tag(:i, '', class: 'fa fa-plus') + "new panel" %>
    </div>
  <% end %>
  <ol class="carousel-indicators">
    <% (0..widget.panels.size-1).each do |index| %>
      <li data-target="#carousel<%= widget.id %>" data-slide-to="<%= index %>" <% if index == 0 %>class="active"<% end %>></li>
    <% end %>
  </ol>
  <div class="carousel-inner"> 
    <% widget.panels.each do |panel| %>
      <%= render template: 'elastic_slider_panel_widget/show', locals: {widget: panel} %>
    <% end %>
  </div>
  <a class="left carousel-control" href="#carousel<%= widget.id %>" role="button" data-slide="prev"><span class="glyphicon glyphicon-chevron-left"></span></a>
  <a class="right carousel-control" href="#carousel<%= widget.id %>" role="button" data-slide="next"><span class="glyphicon glyphicon-chevron-right"></span></a>
</div><!-- /.carousel -->
